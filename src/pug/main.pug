doctype html
html
    head
        title=boilerplate
        meta(charset="utf-8")
        meta(name="description" content="Boilerplate for application creation.")
        link(rel="icon", type="image/png", href="img/favicon.png")

        if develop
            script(type="text/javascript", src="js/develop.js")
            link(rel="stylesheet" href="css/develop.sdk.css")
            link(rel="stylesheet" href="css/develop.app.css")
        else
            script(type="text/javascript", src="js/release.js")
            link(rel="stylesheet" href="css/release.sdk.css")
            link(rel="stylesheet" href="css/release.app.css")

    body
        include ./pages/init.pug
        include ./pages/main.pug


